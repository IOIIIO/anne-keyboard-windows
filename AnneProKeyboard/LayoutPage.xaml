                                    <Setter Property="Margin" Value="0,-4,0,0" />
                                </Style>
                            </Grid.Resources>
                            <RelativePanel Height="70" Margin="0" Grid.Row="0">
                                <RelativePanel.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="Margin" Value="1,5,0,0" />
