                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical" Margin="0">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="10,5,0,5" />
                                <Setter Property="Height" Value="45" />
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                            </Style>
                        </StackPanel.Resources>
                        <Button x:Name="AllKeys" Content="All Keys" VerticalAlignment="Bottom" IsEnabled="True" Click="KeyboardAllButton_Click"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="WASDKeys" Grid.Column="0" Grid.Row="0" Content="WASD" IsEnabled="True" Click="KeyboardWASDButton_Click"/>
                            <Button x:Name="IJKLKeys"  Grid.Column="1" Grid.Row="0"  Content="IJKL" IsEnabled="True" Click="KeyboardIJKLButton_Click"/>
                            <Button x:Name="NumKeys" Grid.Column="0" Grid.Row="1" Content="Num Row" IsEnabled="True" Click="KeyboardNumRowButton_Click"/>
                            <Button x:Name="ModifierKeys" Grid.Column="1" Grid.Row="1" Content="Modifiers" IsEnabled='True' Click="KeyboardModifiersButton_Click"/>
                        </Grid>
                        <Button x:Name="ColourTool" Content="Match a Colour" IsEnabled='True' Click="KeyboardColourPickerButton_Click"/>
                    </StackPanel>
                </Grid>
                <RelativePanel Grid.Column="1" HorizontalAlignment="Center">
                    <ColorPicker x:Name="colourPicker"
                        IsColorSliderVisible="True"
                        IsColorChannelTextInputVisible="True"
                        IsHexInputVisible="True"
                        IsAlphaEnabled="False"
                        IsAlphaSliderVisible="True"
                        IsAlphaTextInputVisible="True"
                                 ColorSpectrumShape="Ring"
                        ColorChanged="ColourPicker_ColorChanged" Margin="0,0,0,-347" />

                    <Grid RelativePanel.Below="colourPicker"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignRightWithPanel="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
